{
  "name": "media-server-deluxe",
  "version": "1.0.0",
  "description": "Media Server Deluxe",
  "main": "main.js",
  "scripts": {
    "electron:start": "electron .",
    "electron:build": "electron-builder"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.mediaserver",
    "productName": "Media Server Deluxe",
    "files": [
      "main.js",
      "preload.js",
      "client/build/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Video;AudioVideo;"
    }
  }
}
